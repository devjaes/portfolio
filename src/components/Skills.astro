---
interface SkillCategory {
  title: string;
  icon: string;
  skills: { name: string; color?: string }[];
  highlight?: boolean;
}

const categories: SkillCategory[] = [
  {
    title: "Core Stack",
    icon: "code",
    skills: [
      { name: "TypeScript", color: "#3178c6" },
      { name: "JavaScript", color: "#f7df1e" },
      { name: "React 18+", color: "#61dafb" },
      { name: "Next.js", color: "#ffffff" },
    ],
  },
  {
    title: "AI Power Tools",
    icon: "sparkles",
    highlight: true,
    skills: [
      { name: "Cursor", color: "#22d3ee" },
      { name: "Windsurf", color: "#a855f7" },
      { name: "GitHub Copilot", color: "#ffffff" },
      { name: "Claude Code", color: "#f97316" },
    ],
  },
  {
    title: "Backend & Cloud",
    icon: "server",
    skills: [
      { name: "Node.js", color: "#68a063" },
      { name: "NestJS", color: "#e0234e" },
      { name: "Ruby on Rails", color: "#cc0000" },
      { name: "PostgreSQL", color: "#336791" },
      { name: "AWS", color: "#ff9900" },
    ],
  },
  {
    title: "Testing & DevOps",
    icon: "terminal",
    skills: [
      { name: "Playwright", color: "#2ead33" },
      { name: "Jest", color: "#c21325" },
      { name: "Docker", color: "#2496ed" },
      { name: "Git", color: "#f05032" },
      { name: "GitHub Actions", color: "#2088ff" },
    ],
  },
];
---

<section id="skills" class="section-spacing bg-surface/30">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="mb-12 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">Technical Skills</h2>
      <p class="text-text-secondary max-w-2xl mx-auto">
        Technologies and tools I use daily to build high-quality software.
      </p>
    </div>

    <!-- Skills Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        categories.map((category, index) => (
          <div
            class:list={[
              "relative p-6 rounded-xl border transition-all duration-300 group",
              category.highlight
                ? "bg-gradient-to-br from-surface via-surface to-accent-cyan/5 border-accent-cyan/30 hover:border-accent-cyan/60"
                : "bg-surface border-surface-border hover:border-surface-light",
            ]}
            style={`animation-delay: ${index * 100}ms;`}
          >
            {/* Glow effect for highlighted card */}
            {category.highlight && (
              <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-accent-cyan/10 to-accent-purple/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10 blur-xl" />
            )}

            {/* Header */}
            <div class="flex items-center gap-3 mb-5">
              <div
                class:list={[
                  "p-2 rounded-lg",
                  category.highlight
                    ? "bg-accent-cyan/20 text-accent-cyan"
                    : "bg-surface-light text-text-muted",
                ]}
              >
                {category.icon === "code" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                    />
                  </svg>
                )}
                {category.icon === "sparkles" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                    />
                  </svg>
                )}
                {category.icon === "server" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                    />
                  </svg>
                )}
                {category.icon === "terminal" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>
                )}
              </div>
              <h3
                class:list={[
                  "font-semibold",
                  category.highlight ? "text-accent-cyan" : "text-text-primary",
                ]}
              >
                {category.title}
              </h3>
              {category.highlight && (
                <span class="ml-auto text-xs font-medium px-2 py-0.5 bg-accent-cyan/20 text-accent-cyan rounded-full">
                  Daily
                </span>
              )}
            </div>

            {/* Skills List */}
            <ul class="space-y-3">
              {category.skills.map((skill) => (
                <li class="flex items-center gap-3 text-text-secondary group/skill">
                  <span
                    class="w-2 h-2 rounded-full grayscale group-hover/skill:grayscale-0 transition-all duration-300"
                    style={`background-color: ${skill.color || "#a1a1aa"};`}
                  />
                  <span class="group-hover/skill:text-text-primary transition-colors">
                    {skill.name}
                  </span>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
