---
import { getCollection } from "astro:content";

// Fetch all work projects and sort by date
const allProjects = (await getCollection("work"))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

// Separate main projects from archive projects
const archiveProjects = allProjects.filter(project => !project.data.isMain);
const mainProjects = allProjects.filter(project => project.data.isMain);

// Use all projects for the archive section (you can adjust the filter)
const projectsToShow = mainProjects;
---

<section class="section-spacing bg-surface/30">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="mb-12">
      <h2 class="text-2xl sm:text-3xl font-bold mb-4 text-text-secondary">The Archive</h2>
      <p class="text-text-muted max-w-2xl">
        Previous projects showcasing my growth as a developer.
      </p>
    </div>

    <!-- Archive Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {projectsToShow.map((project, index) => (
        <a 
          href={`/work/${project.slug}/`}
          class="group block p-5 rounded-xl border border-surface-border bg-surface/30 hover:bg-surface hover:border-surface-light transition-all duration-300"
          style={`animation-delay: ${index * 50}ms;`}
        >
          {/* Image */}
          <div class="relative h-40 mb-4 rounded-lg overflow-hidden">
            <img 
              src={project.data.img} 
              alt={project.data.img_alt || project.data.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-surface/80 to-transparent opacity-60"></div>
          </div>

          {/* Content */}
          <h3 class="text-lg font-semibold text-text-primary mb-2 group-hover:text-accent-cyan transition-colors line-clamp-1">
            {project.data.title}
          </h3>
          <p class="text-sm text-text-muted mb-4 line-clamp-2">
            {project.data.description}
          </p>

          {/* Tech Stack */}
          <div class="flex flex-wrap gap-1.5">
            {project.data.tags.slice(0, 3).map((tag) => (
              <span class="px-2 py-0.5 text-xs text-text-muted bg-surface-light rounded-full">
                {tag}
              </span>
            ))}
            {project.data.tags.length > 3 && (
              <span class="px-2 py-0.5 text-xs text-text-muted">
                +{project.data.tags.length - 3}
              </span>
            )}
          </div>
        </a>
      ))}
    </div>

    <!-- View All Link -->
    <div class="mt-8 text-center">
      <a 
        href="/work/" 
        class="inline-flex items-center gap-2 text-text-secondary hover:text-accent-cyan transition-colors"
      >
        <span>View all projects</span>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
