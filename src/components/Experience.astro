---
interface ExperienceItem {
  title: string;
  company: string;
  date: string;
  badges: string[];
  points: string[];
  current?: boolean;
  relatedProjects?: string; // Link to related projects section
}

const experiences: ExperienceItem[] = [
  {
    title: "Full Stack Engineer",
    company: "Senirop (Consultancy)",
    date: "Nov 2024 - Present",
    badges: ["React 18+", "Rails", "AI Tools"],
    current: true,
    relatedProjects: "#projects",
    points: [
      "Core developer for TAPinto.net (US Market), managing CMS features for a high-traffic news platform.",
      "Architected the migration of an Export ERP (Lideser) to Clean Architecture in <2 weeks.",
      "Validated AI Code Generation models to train a custom AI Code Quality Validator."
    ]
  },
  {
    title: "Full Stack Developer",
    company: "Technical University of Ambato",
    date: "Dec 2023 - Sep 2024",
    badges: ["Next.js", "NestJS", "BullMQ"],
    points: [
      "Led a Scrum team building a Document Management System (Gendocs V3).",
      "Optimized document generation performance by 70% using queues."
    ]
  },
  {
    title: "Full Stack Developer",
    company: "Ambivalence Clothing",
    date: "Mar 2023 - May 2023",
    badges: ["Next.js 14", "TypeScript"],
    points: [
      "Designed and developed a full e-commerce platform using Next.js 14."
    ]
  }
];
---

<section id="experience" class="section-spacing">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">Experience</h2>
      <p class="text-text-secondary max-w-2xl">
        My professional journey building scalable applications and working with international clients.
      </p>
    </div>

    <!-- Timeline -->
    <div class="relative">
      <!-- Timeline Line with Gradient -->
      <div class="timeline-line absolute left-0 md:left-8 top-0 bottom-0 w-px"></div>

      <!-- Experience Items -->
      <div class="space-y-8 lg:space-y-10">
        {experiences.map((exp, index) => (
          <div 
            class="relative pl-8 md:pl-20 animate-fade-in-up"
            style={`animation-delay: ${index * 150}ms;`}
          >
            <!-- Timeline Dot -->
            <div class:list={[
              "timeline-dot absolute left-0 md:left-8 -translate-x-1/2 rounded-full border-2 transition-all duration-300",
              exp.current 
                ? "w-5 h-5 bg-accent-cyan border-accent-cyan current-dot" 
                : "w-4 h-4 bg-surface-light border-surface-border hover:border-text-muted"
            ]}>
              {exp.current && (
                <span class="absolute inset-0 rounded-full bg-accent-cyan/40 animate-ping-slow"></span>
              )}
            </div>

            <!-- Experience Card with Spotlight Effect -->
            <div class="experience-card group relative p-6 lg:p-8 rounded-2xl border border-surface-border bg-surface/30 backdrop-blur-sm overflow-hidden transition-all duration-300 hover:bg-surface/60 hover:border-accent-cyan/30 hover:shadow-[0_0_30px_rgba(34,211,238,0.08)]">
              <!-- Spotlight gradient overlay on hover -->
              <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
                <div class="absolute inset-0 bg-gradient-to-br from-accent-cyan/5 via-transparent to-accent-purple/5"></div>
              </div>

              <!-- Card Content -->
              <div class="relative z-10">
                <!-- Header -->
                <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-3 mb-5">
                  <div>
                    <h3 class="text-xl lg:text-2xl font-semibold text-text-primary group-hover:text-accent-cyan transition-colors duration-300">
                      {exp.title}
                    </h3>
                    <p class="text-text-secondary mt-1">{exp.company}</p>
                  </div>
                  <div class="flex items-center gap-3 sm:flex-shrink-0">
                    {exp.current && (
                      <span class="current-badge inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-semibold rounded-full">
                        <span class="relative flex h-2 w-2">
                          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent-cyan opacity-75"></span>
                          <span class="relative inline-flex rounded-full h-2 w-2 bg-accent-cyan"></span>
                        </span>
                        Current
                      </span>
                    )}
                    <span class="text-sm text-text-muted whitespace-nowrap">{exp.date}</span>
                  </div>
                </div>

                <!-- Technology Badges with Hover Glow -->
                <div class="flex flex-wrap gap-2 mb-5">
                  {exp.badges.map((badge) => (
                    <span class="tech-badge px-3 py-1.5 text-xs font-medium rounded-full border transition-all duration-300 cursor-default">
                      {badge}
                    </span>
                  ))}
                </div>

                <!-- Achievement Points -->
                <ul class="space-y-3">
                  {exp.points.map((point) => (
                    <li class="flex items-start gap-3 text-text-secondary group/item">
                      <svg class="w-5 h-5 text-accent-cyan flex-shrink-0 mt-0.5 transition-transform duration-300 group-hover/item:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span class="leading-relaxed">{point}</span>
                    </li>
                  ))}
                </ul>

                <!-- Related Projects Link (Cross-linking) -->
                {exp.relatedProjects && (
                  <div class="mt-6 pt-5 border-t border-surface-border/50">
                    <a 
                      href={exp.relatedProjects}
                      class="related-link inline-flex items-center gap-2 text-sm font-medium text-text-muted hover:text-accent-cyan transition-all duration-300 group/link"
                    >
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                      </svg>
                      <span>See projects related to this role</span>
                      <svg class="w-4 h-4 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </a>
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* Timeline Line with Gradient */
  .timeline-line {
    background: linear-gradient(
      to bottom,
      var(--accent-cyan) 0%,
      rgba(34, 211, 238, 0.5) 20%,
      rgba(34, 211, 238, 0.2) 50%,
      var(--surface-border) 80%,
      transparent 100%
    );
  }

  /* Current Role Dot - Glow Effect */
  .current-dot {
    box-shadow: 
      0 0 0 4px rgba(34, 211, 238, 0.15),
      0 0 20px rgba(34, 211, 238, 0.4),
      0 0 40px rgba(34, 211, 238, 0.2);
  }

  /* Slow ping animation for the active dot */
  @keyframes ping-slow {
    0% {
      transform: scale(1);
      opacity: 0.8;
    }
    50% {
      transform: scale(1.8);
      opacity: 0;
    }
    100% {
      transform: scale(1.8);
      opacity: 0;
    }
  }

  .animate-ping-slow {
    animation: ping-slow 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  /* Current Badge Styling */
  .current-badge {
    background: linear-gradient(135deg, rgba(34, 211, 238, 0.15) 0%, rgba(34, 211, 238, 0.08) 100%);
    color: var(--accent-cyan);
    border: 1px solid rgba(34, 211, 238, 0.3);
    box-shadow: 0 0 12px rgba(34, 211, 238, 0.2);
  }

  /* Technology Badge Styling */
  .tech-badge {
    background: var(--surface-light);
    color: var(--text-secondary);
    border-color: var(--surface-border);
  }

  .tech-badge:hover {
    background: rgba(34, 211, 238, 0.1);
    color: var(--accent-cyan);
    border-color: rgba(34, 211, 238, 0.4);
    box-shadow: 0 0 15px rgba(34, 211, 238, 0.15);
    transform: translateY(-1px);
  }

  /* Related Projects Link Styling */
  .related-link {
    position: relative;
  }

  .related-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: linear-gradient(90deg, var(--accent-cyan), transparent);
    transition: width 0.3s ease;
  }

  .related-link:hover::after {
    width: 100%;
  }

  /* Fade in up animation */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    opacity: 0;
    animation: fade-in-up 0.7s ease-out forwards;
  }

  /* Experience card subtle border glow on hover */
  .experience-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 1px;
    background: linear-gradient(
      135deg,
      transparent 0%,
      transparent 40%,
      rgba(34, 211, 238, 0.1) 50%,
      transparent 60%,
      transparent 100%
    );
    -webkit-mask: 
      linear-gradient(#fff 0 0) content-box, 
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .experience-card:hover::before {
    opacity: 1;
  }

  /* Smooth scroll behavior for related projects link */
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }
</style>

<script>
  // Smooth scroll to related projects section
  document.querySelectorAll('.related-link').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const href = link.getAttribute('href');
      if (href) {
        const target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({ 
            behavior: 'smooth',
            block: 'start'
          });
        }
      }
    });
  });
</script>
